.container
  .span12
    .content-block
      .bd
        %br
        %br
        %br
        %h1 Horizon Lookups
        = form_for @lookup do |f|
          %table.table
            %caption New lookup table entry
            %tbody
              %tr{:style => 'width:50%'}
                %td
                  = f.label :account
                  = f.text_field :account
                %td
                  = f.label :fund_ticker
                  = f.text_field :fund_ticker
                %td
                  = f.label :fund_name
                  = f.text_field :fund_name
                %td= f.submit 'Add Entry', :class => 'button', :style => 'margin-top:20px'
          - unless @tickers.empty?
            %table.table.zebra-striped
              %thead
                %tr
                  %th Account
                  %th Fund Ticker
                  %th Fund Name
                  %th
              %tbody
                - @tickers.each do |t|
                  %tr
                    %td= t.account
                    %td= t.fund_ticker
                    %td= t.fund_name
                    %td= link_to 'Delete', t, :method => :delete, :data => { :confirm => 'Are you sure?' }
