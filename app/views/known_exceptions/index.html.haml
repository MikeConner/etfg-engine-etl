.container
  .span12
    .content-block
      .bd
        %br
        %br
        %div{:style => 'width:20%'}
          = label_tag :data_source
          = select_tag :data_source, options_from_collection_for_select(@datasources, :id, :data_source_name, @selected_source), {:prompt => 'Select a Datasource', :onchange => "window.location = '/known_exceptions?src_id=' + $('#data_source').val();"}
        %br
        = form_tag bulk_update_known_exceptions_path do
          = render :partial => 'known', :locals => {:pending => @pending, :exceptions => @exceptions, :src_id => @selected_source}
          .actions
            = submit_tag 'Update Known Exceptions', :class => 'button btn btn-large btn-primary'
            %br
            %br
